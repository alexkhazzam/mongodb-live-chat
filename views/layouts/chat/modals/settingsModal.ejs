<div id="settings-modal">
    <div id="modal-content">
            <ul class="nav nav-tabs" id="main-settings-nav">
                <li class="nav-item">
                  <a class="nav-link active-link" id="preferences-link">Preferences<i class="fas fa-palette"></i></a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" id="security-link">Security<i class="fas fa-lock"></i></a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" id="admin-link">Admin<i class="fas fa-user-shield"></i></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="close-modal">Close<i class="fas fa-times-circle"></i></a>
