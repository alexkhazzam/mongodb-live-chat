<link rel="stylesheet" href="/css/chat/modals/settings.css" />
<script src="/js/chat/modals/settings.js" defer></script>
<script src="/js/api/chat/modals/settings/security.mjs" defer></script>
<div id="settings-modal">
    </script>
    <div id="modal-content">
            <ul class="nav nav-tabs" id="main-settings-nav">
                <li class="nav-item">
                  <a class="nav-link active-link" id="preferences-link">Preferences<i class="fas fa-palette"></i></a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" id="security-link">Security<i class="fas fa-lock"></i></a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" id="admin-link">Admin<i class="fas fa-user-shield"></i></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="close-modal">Close<i class="fas fa-times-circle"></i></a>
                </li>
            </ul>
            <div id="active-content">
                <div id="preferences">
                  
                </div>
                <div id="security">
                        <input type="password" class="form-control" id="security-suggestion" placeholder="Have any questions regarding your credentials?" name="question" required>
                        <button class="btn btn-warning" id="submit-security-question">Submit Question</button>
                        <div class="spinner-border text-primary" id="loading-spinner" role="status">
                            <span class="sr-only">Loading...</span>
                        </div>
                    <ul id="security-items">
                        <div id="security-items-wrapper">
                            <span id="personal-information">
                                <li class="security-item">
                                    <img src="/images/chat/user/defaultProfile.jpg" id="profile-picture" alt="Profile Picture"/>
                                </li>
                                <li class="security-item">
                                    First Name:&nbsp;<span id="security-item__first-name"></span>
                                </li>
                                <li class="security-item">
                                    Last Name:&nbsp;<span id="security-item__last-name"></span>
                                </li>
                                <li class="security-item">
                                    Email:&nbsp;<span id="security-item__email"></span>
                                </li>
                                <li class="security-item" id="password-information">
                                Password:&nbsp;<i class="fas fa-edit" id="edit-password"></i><span id="security-item__password"></span>
                                </li>
                            </span>
                            <div id="change-password-form">
                                <input type="password" class="form-control replace-password" placeholder="Current Password" required id="current-password"/>
                                <input type="password" class="form-control replace-password" placeholder="New Password" required id="password"/>
                                <input type="password" class="form-control replace-password" placeholder="Confirm New Password" required id="confirm-password"/>
                                <button class="btn btn-success" id="submit-password" type="submit">Change Password</button>
                                <button class="btn btn-danger" id="go-back"><i class="fas fa-arrow-circle-left"></i>Go Back</button>
                            </div>
                        </div>
                    </ul>
                </div>
                <div id="admin">
                    <form action="/admin-secret" method="POST" >
                            <input type="password" class="form-control" id="admin-secret" placeholder="Admin secret" name="adminSecret" required>
                            <button class="btn btn-warning" id="submit-secret" type="submit">Authenticate As Admin</button>
                    </form>
                    <ul id="admin-list">
                        <div id="admin-list-wrapper">
                            <li class="admin-list__item">
                                <i class="fas fa-check"></i> Be able to delete students' chats
                            </li>
                            <li class="admin-list__item">
                                <i class="fas fa-check"></i> Be able to remove students
                            </li>
                            <li class="admin-list__item">
                                <i class="fas fa-check"></i> Be able to access blocked chat features
                            </li>
                        </div>
                    </ul>
                </div>
            </div>
    </div>
</div>